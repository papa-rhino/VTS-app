<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.dhruv.vts.Welcome"
    android:orientation="vertical"
    android:background="@drawable/space2">

    <LinearLayout

        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="130dp"
            android:text="Welcome"
            android:textColor="#fdf2df"
            android:textSize="60sp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/newspace1">


        <Button

            android:id="@+id/UserB"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonstyle"
            android:text="USER"
            android:textSize="16dp"
            android:onClick="User"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button

            android:id="@+id/AdminB"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonstyle"
            android:text="ADMIN"
            android:textSize="16sp"
            android:onClick="Admin"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button

            android:id="@+id/DriverB"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonstyle"
            android:text="DRIVER"
            android:textSize="16sp"
            android:onClick="Driver"/>
    </LinearLayout>


</LinearLayout>