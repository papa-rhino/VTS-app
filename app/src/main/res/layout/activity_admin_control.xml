<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dhruv.vts.AdminControl"
    android:orientation="vertical"
    android:background="@drawable/polygontexture">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMIN CONTROLS"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="35dp"
        android:layout_gravity="center"></TextView>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button

        android:id="@+id/view_status"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#000"
        android:text="VIEW STATUS"
        android:textSize="16dp"
        android:textColor="#fff"
        android:onClick="checkStatus"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button

        android:id="@+id/lock_drivers"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#000"
        android:text="LOCK DRIVERS"
        android:textSize="16sp"
        android:textColor="#fff"
        android:onClick="LockDriver"/>

</LinearLayout>